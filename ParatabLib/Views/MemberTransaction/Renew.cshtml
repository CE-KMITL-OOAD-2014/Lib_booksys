@{
    ViewBag.Title = "Renew book";
}
@model ParatabLib.Models.BorrowEntry
<h2>Renew book</h2>
<form class="account-form" action="/MemberTransaction/Renew/" method="post">
    @Html.AntiForgeryToken()
    <fieldset>
        <legend>Renew book</legend>
        Are you sure want to renew this book?<br />
        <input type="submit" value="Renew" name="answer" />
        <a class=" account-btt account-btt-in-form" href="/MemberTransaction/">Back</a>
        @Html.HiddenFor(model => model.ID)
        @Html.HiddenFor(model => model.UserID)
        @Html.HiddenFor(model => model.BookID)
        @Html.HiddenFor(model => model.BorrowDate)
        @Html.HiddenFor(model => model.DueDate)
        @Html.HiddenFor(model => model.RenewCount)
    </fieldset>
</form>