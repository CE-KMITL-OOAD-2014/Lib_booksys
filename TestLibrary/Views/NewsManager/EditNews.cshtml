@{
    ViewBag.Title = "EditNews";
}
@model TestLibrary.Models.News

<h2>EditNews</h2>

<form class="news-form" action="/NewsManager/EditNews" method="post">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <label>Title</label><br />
    @Html.TextBoxFor(model => model.Title, new { @placeholder = "Title" })
    @Html.ValidationMessageFor(model => model.Title)<br />
    <label>Detail</label><br />
    @Html.ValidationMessageFor(model => model.Detail)
    <textarea id="editor" class="ckeditor" name="Detail">
        @Html.DisplayFor(model => model.Detail)
    </textarea>
    @Html.HiddenFor(model => model.NewsID)
    @Html.HiddenFor(model => model.PostTime)
    <input type="submit" value="Edit news" />
</form>

<script src="/Script/ckeditor/ckeditor.js" type="text/javascript">
</script>