@{
    ViewBag.Title = "Account manager";
}
@model TestLibrary.Models.Person
<h2>Welcome! @Model.Identify()</h2>
@if (TempData["Notificaion"] != null)
{
    <p class="noti-msg">@TempData["Notification"]</p>
}

@if (TempData["BorrowNoti"] != null && Model.Identify().StartsWith("Member"))
{
    <div class="noti-yellow">
        <img class="close-btt" src="~/Content/close-btt.png" />
        @TempData["BorrowNoti"] <a class="norm" href="/MemberTransaction/">here</a>.
    </div>
}
<p class="account-detail"><u><b>Your profile</u><br />
User ID:</b>@Html.DisplayFor(model => model.UserID)<br />
<b>User name:</b>@Html.DisplayFor(model => model.UserName)<br />
<b>Name:</b>@Html.DisplayFor(model => model.Name)<br />
<b>Email:</b>@Html.DisplayTextFor(model => model.Email)<br />
<b>Password:</b>********
</p>
    @if (Session["LoginUser"].ToString().Substring(0,2) == "M_")
    {
        <a class="account-btt" href="/MemberTransaction/">Member trans-service</a>
    }
    else
    {
        <a class="account-btt" href="/Account/LibrarianPortal">Portal</a>
    }
    <a class="account-btt" href="/Account/EditAccount">Edit Account</a>
    <a class="account-btt" href="/Account/ChangePassword">Change password</a>
    <a class="account-btt" href="/Authenticate/Logout">Sign out</a>