@{
    ViewBag.Title = "Reset password";
}
@model TestLibrary.Models.Member
<h2>Reset password for @Html.DisplayFor(model => model.UserName)</h2>
<p class="noti-msg">@TempData["Notification"]</p>
<form class="news-form" action="/Authenticate/ResetPassword" method="post">
    @Html.AntiForgeryToken()
    <label>Please enter new password and comfirm then submit.</label><br />
    <input type="password" name="newPassword" placeholder="New password" /><br />
    <input type="password" name="confirmPassword" placeholder="Confirm password" /><br />
    @Html.HiddenFor(model => model.UserID)
    @Html.HiddenFor(model => model.UserName)
    @Html.HiddenFor(model => model.Password)
    @Html.HiddenFor(model => model.Name)
    @Html.HiddenFor(model => model.Email)
    <input type="submit" value="submit" />
</form>
