            }
            else
                $("img.back-to-top-btt").css("opacity", 0);
                //$("img.back-to-top-btt").fadeOut("slow");
           });
           
        });*/
    </script>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div id="nav">
        <div class="reg-login-linkzone">
            @if(Session["LoginUser"] != null)
            {
                
            <text>Welcome! </text><a href="/Account/Detail">@Session["LoginUser"]</a><br />
            <a href="/Account/">My account</a><text>|</text><a href="/Account/Logout">Sign out</a>
            }
            else{
            <a href="/Account/Register">Register</a><text>|</text><a href="/Account/Login">Login</a>
            }


    </div>
    <div id="header">
        <a class="paratab" href="~/">Paratab+</a>
</div>
        <div id="menubar">
            <ul class="menulist">
                <li><a href="~/">Home</a></li>
                <li><a href="/Home/About">About Us</a></li>
                <li><a href="/Home/Contact">Contact</a></li>
                <li><a href="/Home/ChangeLog">Ch.Log</a></li>
            </ul>
        </div>
    </div>
    <div id="content">
        @RenderBody()
    </div>
    <img class="back-to-top-btt"src="~/Content/upArrow.png"/>
    <footer>&copy;@DateTime.Now.Year <a class="paratab" href="~/">ParatabPlusSite</a> ห้ามเกรียนคนใดคัดลอกเว็บไซต์นี้เด็ดขาด</footer>
</body>
