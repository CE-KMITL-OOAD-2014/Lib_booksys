@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="~/Content/_Style.css" type="text/css" />
    <script src="~/Script/jquery-1.11.1.js"></script>
    <script>
        function resizewindow() {
            if (window.innerWidth < 400) {

                $("div.reg-login-linkzone").css("margin", 0);
                $("div#header").css("margin", "4px 0px 0px 0px");
                $("div#menubar").css("margin", "10px 0px 0px 0px");
                $("div#content").css("margin", "70px 0px 0px 0px");

            }
            else {
                $("div.reg-login-linkzone").css("margin", "0px 15% 0px 15%");
                $("div#header").css("margin", "4px 15% 0px 15%");
                $("div#menubar").css("margin", "10px 15% 0px 15%");
                $("div#content").css("margin", "70px 15% 0px 15%");
            }
        }
    </script>
    <script>
        $(document).ready(function () {
            resizewindow();
            $(window).resize(resizewindow);
        });
