@{
    ViewBag.Title = "DeleteBook";
}
@model TestLibrary.Models.Book
<h2>DeleteBook</h2>
<form class="account-form" action="/Manage/DeleteBook/@Html.DisplayFor(model => model.BookID)" method="post">
    @Html.AntiForgeryToken()
    <fieldset>
        <legend>Delete book</legend>
        Are you sure want to delete @Html.DisplayFor(model => model.BookName)?
        <input type="submit" value="Yes" name="answer"/>
        <input type="submit" value="No" name="answer"/>
    </fieldset>
</form>
