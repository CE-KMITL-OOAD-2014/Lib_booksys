@{
    ViewBag.Title = "Search result";
}
@model  IList<TestLibrary.Models.Book>
<h2>Search result:@ViewBag.keyword</h2>
@if (Model.Count == 0)
{
    <p class="noti-msg">No book with keyword found.</p>
}
else { 
<table class="list">
    <tr>
        <th>Book name</th>
        <th>Author</th>
        <th>Publisher</th>
        <th>Status</th>
        <th></th>
    </tr>
    @foreach (var book in Model)
    {
        <tr>
            <td>@book.BookName</td>
            <td>@book.Author</td>
            <td>@book.Publisher</td>
            <td>@book.BookStatus</td>
            <td><a href="/Book/View/@book.BookID"><img class="view-btt" src="/Content/view-gray-btt.png" /></a></td>
        </tr>
    }
</table>
}